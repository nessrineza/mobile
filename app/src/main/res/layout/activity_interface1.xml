<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Encadrez l'image avec un CardView -->
        <!-- Titre pour les premiers boutons -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="414dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/imagetop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maquillage pour le Visage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />

        <!-- ScrollView pour les premiers boutons -->

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- LinearLayout horizontal pour les premiers boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Bouton 1 -->
                <Button
                    android:id="@+id/button_visage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fond de teint"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 2 -->
                <Button
                    android:id="@+id/button_yeux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer"
                    android:onClick="showDescription"
                    android:tag="Description des yeux"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 3 -->
                <Button
                    android:id="@+id/button_levres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fard à joues"
                    android:onClick="showDescription"
                    android:tag="Description des levres"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 4 -->
                <Button
                    android:id="@+id/button_autres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bronzer"
                    android:onClick="showDescription"
                    android:tag="Description autres"
                    android:backgroundTint="#FFC0CB" />

            </LinearLayout>

        </HorizontalScrollView>


        <!-- Titre pour les deuxièmes boutons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maquillage pour les Yeux"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- LinearLayout horizontal pour les deuxièmes boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <!-- Cinquième bouton -->
                <Button
                    android:id="@+id/button_visages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mascara"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />

                <!-- Sixième bouton -->
                <Button
                    android:id="@+id/button_Yeuxc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eyeliner"
                    android:onClick="showDescription"
                    android:tag="Description des yeux"
                    android:backgroundTint="#FFC0CB" />

                <!-- Septième bouton -->
                <Button
                    android:id="@+id/button_levre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Des Palettes"
                    android:onClick="showDescription"
                    android:tag="Description des levres"
                    android:backgroundTint="#FFC0CB" />

                <!-- Huitième bouton -->
                <Button
                    android:id="@+id/button_autresC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anticernes"
                    android:onClick="showDescription"
                    android:tag="Description du autres"
                    android:backgroundTint="#FFC0CB" />

            </LinearLayout>

        </HorizontalScrollView>
        <!-- Titre pour les troisièmes boutons -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maquillage pour les Levres"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- LinearLayout horizontal pour les troisièmes boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="12dp">

                <!-- Neuvième bouton -->
                <Button
                    android:id="@+id/button_shampoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rouges à levres"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />

                <!-- Dixième bouton -->
                <Button
                    android:id="@+id/button_apresshampoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contour des levres"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />

                <!-- Onzième bouton -->
                <Button
                    android:id="@+id/button_masque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gloss"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />


            </LinearLayout>

        </HorizontalScrollView>

        <!-- Titre -->


        <!-- ScrollView -->

    </LinearLayout>




</ScrollView>
