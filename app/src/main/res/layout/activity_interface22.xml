<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Encadrez l'image avec un CardView -->
        <!-- Titre pour les premiers boutons -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/service_image"
            android:layout_width="414dp"
            android:layout_height="305dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/visage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maquillage pour le Visage"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />

        <!-- ScrollView pour les premiers boutons -->

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!-- LinearLayout horizontal pour les premiers boutons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Bouton 1 -->
                <Button
                    android:id="@+id/button_fond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fond de teint"
                    android:onClick="showDescription"
                    android:tag="Description du Visage"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 2 -->
                <Button
                    android:id="@+id/button_yeux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primer"
                    android:onClick="showDescription"
                    android:tag="Description des yeux"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 3 -->
                <Button
                    android:id="@+id/button_levres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fard Ã  joues"
                    android:onClick="showDescription"
                    android:tag="Description des levres"
                    android:backgroundTint="#FFC0CB" />

                <!-- Bouton 4 -->
                <Button
                    android:id="@+id/button_autres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bronzer"
                    android:onClick="showDescription"
                    android:tag="Description autres"
                    android:backgroundTint="#FFC0CB" />

            </LinearLayout>

        </HorizontalScrollView>




        <!-- Titre -->


        <!-- ScrollView -->

    </LinearLayout>




</ScrollView>
