<?xml version="1.0" encoding="utf-8"?>
<!-- activity_update_appointment.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Appointment ID -->
    <EditText
        android:id="@+id/editTextAppointmentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Appointment ID"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <!-- Appointment Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Title:"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter title"
        android:layout_marginBottom="16dp"/>

    <!-- Location -->
    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:inputType="text"
        android:hint="Enter location"
        android:layout_marginBottom="16dp"/>

    <!-- Date -->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date:"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonPickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:layout_marginBottom="16dp"
        android:onClick="pickDate"
        android:background="#FFC0CB"/> <!-- Bouton rose -->

    <!-- Time -->
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time:"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonPickTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Time"
        android:layout_marginBottom="16dp"
        android:onClick="pickTime"
        android:background="#FFC0CB"/> <!-- Bouton rose -->

    <!-- Save Appointment -->
    <Button
        android:id="@+id/buttonSaveAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Appointment"
        android:layout_marginTop="16dp"
        android:onClick="saveAppointment"
        android:background="#E91E63"/> <!-- Bouton rose -->

    <!-- Go to Update -->
    <Button
        android:id="@+id/buttonUpdateAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Appointment"
        android:layout_marginTop="16dp"
        android:onClick="updateAppointment"
        android:background="#E91E63"/> <!-- Bouton rose -->

</LinearLayout>
